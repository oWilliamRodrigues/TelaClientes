<div id="confirm-alert" class="modal" role="dialog" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="confirm-alert-header"></h4>
            </div>
            <div class="modal-body modal-alert-body" id="confirm-alert-body">
            </div>
            <div class="modal-footer" style="text-align:right">
                <button type="button" class="btn btn-primary"
                        onclick="Europa.Confirmacao.Confirm();">
                    <span class="fa fa-check"></span> Confirmar
                </button>
                <button type="button" class="btn btn-default" style="margin-left: 10px"
                        onclick="Europa.Confirmacao.Cancel();">
                    <span class="fa fa-close"></span> Desistir
                </button>
            </div>
        </div>
    </div>
</div>

<div id="info-alert" class="modal" role="dialog" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="info-alert-header"></h4>
            </div>
            <div class="modal-body modal-alert-body" id="info-alert-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" style="float: right;"
                        onclick="Europa.Informacao.Hide(); ">
                    <span class="fa fa-close"></span> Fechar
                </button>
            </div>
        </div>
    </div>
</div>

<div id="spinner" class="modal" data-backdrop="static">
    <div class="modal-dialog" style="width:400px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title">Aguarde </h5>
            </div>
            <div class="modal-body" style="padding:15px;">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                        <div class="progress-percent"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>